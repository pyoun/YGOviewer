<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_height="100dp"
        android:layout_width="75dp"
        android:contentDescription=""
        tools:src="@mipmap/ic_launcher"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/card_pic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/card_list_detail"
        tools:text="Detail"
        android:textSize="12sp"
        android:textColor="#000000"
        android:maxLines="1"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/card_list_text_layout"
        android:layout_toStartOf="@id/card_list_detail"
        android:layout_toLeftOf="@id/card_list_detail"
        android:layout_toEndOf="@id/card_pic"
        android:layout_toRightOf="@id/card_pic">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/card_name"
            tools:text="card_name"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:id="@+id/card_info"
            tools:text="card_info"
            android:textSize="16sp"
            android:maxLines="3"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:layout_below="@+id/card_name"/>

    </RelativeLayout>

</RelativeLayout>